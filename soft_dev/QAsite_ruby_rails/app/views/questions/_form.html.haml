= form_for @question do |f|
  - if @question.errors.any?
    - flash[:error] = "Invalid Question"
    %h2
      = pluralize(@question.errors.count, "error")
      prohibited this question from being saved:
    .col-md-6.col-md-offset-3
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg
  %p
    %br
    = f.text_field :title, :class => "form-control"
    = f.label :Description, :class => "h3"
    %br
    = f.text_area :body, rows: "15", :class => "form-control"
  %p
    = f.submit 'POST', :class => "btn btn-success"
  %br
